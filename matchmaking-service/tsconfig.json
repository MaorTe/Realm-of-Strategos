{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Type Checking */
    "strict": true,
    
    /* Completeness */ 
    "skipLibCheck": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": ".",  

    "sourceMap": true,
    //"sourceRoot": "./src",
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}
